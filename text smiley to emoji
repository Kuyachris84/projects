#Custom def with parameters using 'lmao'
def lmao(helloface):
    # Replace :) with ğŸ™‚
    helloface = helloface.replace(":)", "ğŸ™‚")

    # Replace :( with ğŸ™
    helloface = helloface.replace(":(", "ğŸ™")

    return helloface

#User puts hello with smiley face up or down
input_text = input("Say hello with a smiley face: ")
userinput_newface = lmao(input_text)
print(userinput_newface)
